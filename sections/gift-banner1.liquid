{% comment %}
  Gift Guide — Banner
  Editable text areas and animated buttons
{% endcomment %}

<section class="gift-banner gift-container">
  <div class="gift-banner__content">
    <h1 class="gift-banner__title">{{ section.settings.heading }}</h1>
    <p class="gift-banner__subtitle">{{ section.settings.subheading }}</p>

    <div class="gift-banner__buttons">
      <a href="{{ section.settings.button1_link }}" 
         class="gift-banner__btn">
         {{ section.settings.button1_label }}
      </a>
      <a href="{{ section.settings.button2_link }}" 
         class="gift-banner__btn gift-banner__btn--secondary">
         {{ section.settings.button2_label }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Mission Awaits"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Choose the perfect gift"
    },
    {
      "type": "text",
      "id": "button1_label",
      "label": "Button 1 Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Button 2 Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide — Banner"
    }
  ]
}
{% endschema %}
